.slideBar{
height: 100%;
width: 28%;
background-color: #fff;
overflow: auto;
font-size: 30rpx;
}
.cateItem{
  height:70rpx;
  background-color: #f7fbfc;
  line-height:70rpx;  
  border-bottom: solid 2px #fff;
}
.cateItem.active{
  height:80rpx;
  background-color: #f7fbfc;
  border-left: 2px solid #18ffff;
}
.itemsBox{
  flex: 1;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 100%;
  overflow: auto;
  padding-top: 15rpx;
}
